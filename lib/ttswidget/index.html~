    <script>
        (function($){
            $(document).ready(function(){
                $('#ttstest-button')
                .button()
                .click(function(){
                    console.log(123);
                    var span = $('<span>')
                    .attr('tts', $('#tts-test').val())
                    .attr('gender', $('#gender').val())
                    .attr('lang', $('#lang').val());
                    console.log(span);
                    span
                    .ttswidget()
                    .ttswidget('talk')
                })
            });
        })(jQuery);
